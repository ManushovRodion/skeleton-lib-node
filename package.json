{
  "name": "skeleton-lib-node",
  "version": "1.0.0",
  "description": "RU: Скелет для создания node библиотек с поддержкой TS; EN: Skeleton for building TS-enabled node libraries",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "publish:lib": "npm run build && npm publish",
    "publish:beta": "npm run build && npm publish --tag beta",
    "publish:dryrun": "npm run build && npm publish --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ManushovRodion/skeleton-lib-node.git"
  },
  "keywords": [
    "skeleton",
    "template",
    "js",
    "ts",
    "lib"
  ],
  "author": "manushov_rodion",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ManushovRodion/skeleton-lib-node/issues"
  },
  "homepage": "https://github.com/ManushovRodion/skeleton-lib-node#readme",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": "^12.22.0 || ^14.17.0 || >=16.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint",
      "git add"
    ]
  }
}
